{
  "app": {
    "name": "Rates E-Trading Desktop",
    "version": "1.0.0",
    "environment": "dev"
  },
  "api": {
    "baseUrl": "http://localhost:3000/api",
    "timeout": 30000,
    "retryAttempts": 3
  },
  "transport": {
    "type": "amps",
    "amps": {
      "url": "ws://MontuNobleNumbat2404:9008/amps/json",
      "messageType": "json",
      "clientName": "rates-desktop-dev",
      "heartbeatInterval": 30,
      "reconnect": {
        "enabled": true,
        "initialDelay": 1000,
        "maxDelay": 30000,
        "maxAttempts": 10
      }
    },
    "solace": {
      "url": "ws://localhost:8008",
      "vpnName": "dev-vpn",
      "userName": "dev-user",
      "clientName": "rates-desktop-dev"
    },
    "nats": {
      "url": "ws://MontuNobleNumbat2404:8224",
      "name": "rates-desktop-dev",
      "reconnect": {
        "enabled": true,
        "initialDelay": 2000,
        "maxDelay": 30000,
        "maxAttempts": 10
      },
      "timeout": 5000,
      "pingInterval": 20000,
      "maxPingOut": 2
    }
  },
  "marketData": {
    "updateInterval": 1000,
    "maxHistorySize": 1000,
    "symbols": ["2Y", "3Y", "5Y", "7Y", "10Y", "30Y"]
  },
  "trading": {
    "enabled": true,
    "maxOrderSize": 1000000,
    "defaultCurrency": "USD"
  },
  "features": {
    "advancedCharts": true,
    "realTimeUpdates": true,
    "orderManagement": true
  },
  "logging": {
    "level": "debug",
    "enableConsole": true,
    "enableRemote": false
  },
  "ui": {
    "theme": "light",
    "defaultPageSize": 20,
    "refreshInterval": 5000
  },
  "ampsTopics": {
    "marketData": "rates/marketData",
    "executions": "rates/executions"
  },
  "natsTopics": {
    "marketData": "rates.marketData",
    "executions": "rates.executions"
  }
}
