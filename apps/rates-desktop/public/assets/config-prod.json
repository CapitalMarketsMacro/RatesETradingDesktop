{
  "app": {
    "name": "Rates E-Trading Desktop",
    "version": "1.0.0",
    "environment": "prod"
  },
  "api": {
    "baseUrl": "https://api.rates-trading.com/api",
    "timeout": 30000,
    "retryAttempts": 5
  },
  "transport": {
    "type": "solace",
    "amps": {
      "url": "wss://amps.rates-trading.com:9000/amps/json",
      "user": "prod-user",
      "messageType": "json",
      "clientName": "rates-desktop-prod",
      "heartbeatInterval": 30,
      "reconnect": {
        "enabled": true,
        "initialDelay": 1000,
        "maxDelay": 30000,
        "maxAttempts": 20
      }
    },
    "solace": {
      "url": "wss://solace.rates-trading.com:443",
      "vpnName": "prod-vpn",
      "userName": "prod-user",
      "clientName": "rates-desktop-prod",
      "reconnect": {
        "enabled": true,
        "retryWaitMs": 3000,
        "maxAttempts": 20
      }
    }
  },
  "marketData": {
    "updateInterval": 250,
    "maxHistorySize": 5000,
    "symbols": ["2Y", "3Y", "5Y", "7Y", "10Y", "30Y"]
  },
  "trading": {
    "enabled": true,
    "maxOrderSize": 10000000,
    "defaultCurrency": "USD"
  },
  "features": {
    "advancedCharts": true,
    "realTimeUpdates": true,
    "orderManagement": true
  },
  "logging": {
    "level": "warn",
    "enableConsole": false,
    "enableRemote": true
  },
  "ui": {
    "theme": "auto",
    "defaultPageSize": 100,
    "refreshInterval": 2000
  },
  "ampsTopics": {
    "marketData": "rates/marketData",
    "executions": "rates/executions"
  },
  "natsTopics": {
    "marketData": "rates.marketData",
    "executions": "rates.executions"
  },
  "solaceTopics": {
    "marketData": "rates/marketData",
    "executions": "rates/executions"
  }
}
